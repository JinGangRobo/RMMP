# ============================================
# 应用配置
# ============================================
APP_ENV=dev
DEBUG=false
APP_NAME=RMMP
APP_VERSION=1.0.0
APP_DESCRIPTION='Resource Management Platform'
APP_LICENSE='{"name": "MIT", "url": "https://opensource.org/licenses/MIT"}'

# ============================================
# 监控和日志
# ============================================
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=logs
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=10
LOG_FORMAT=json

# Access Log
ENABLE_ACCESS_LOG=true
ACCESS_LOG_PATH=logs/access.log

# SQL Log (if using SQLAlchemy)
ENABLE_SQL_LOG=false
SQL_LOG_LEVEL=INFO

# ============================================
# 服务器配置
# ============================================
HOST=127.0.0.11
PORT=8080

# ============================================
# 数据库配置
# ============================================
# PostgreSQL
DB_SERVER=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=XXXXXX
DB_NAME=rmmp_db

# ============================================
# 飞书配置
# ============================================
FEISHU_APP_ID=XXX
FEISHU_APP_SECRET=XXX
